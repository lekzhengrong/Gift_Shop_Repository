<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Select Gift Box</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            min-height: 100vh;
        }

        .container {
            display: flex;
            gap: 20px;
            padding: 20px;
            max-width: 1400px;
            margin: 0 auto;
        }

        .box-options {
            flex: 1;
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 12px;
            row-gap: 12px;
        }

        .box-option {
            border: 1px solid #eee;
            padding: 12px;
            border-radius: 8px;
            text-align: center;
            height: fit-content;
        }

        .box-option img {
            width: 100%;
            height: 180px;
            object-fit: cover;
            border-radius: 4px;
            margin-bottom: 8px;
            display: block;
        }

        .sticky-cart {
            width: 300px;
            background: #f9f9f9;
            padding: 20px;
            border-radius: 8px;
            position: sticky;
            top: 20px;
            height: calc(100vh - 40px);
            overflow-y: auto;
        }

        .cart-item {
            display: flex;
            gap: 15px;
            padding: 10px 0;
            border-bottom: 1px solid #eee;
        }

        .cart-item img {
            width: 60px;
            height: 60px;
            object-fit: cover;
            border-radius: 4px;
        }

        .cart-item-info {
            flex: 1;
        }

        #next-button {
            width: 100%;
            padding: 10px;
            background: #000;
            color: white;
            border: none;
            border-radius: 4px;
            margin-top: 20px;
            cursor: pointer;
            transition: background-color 0.2s ease;
        }

        #next-button:hover {
            background: #333;
        }

        #next-button:disabled {
            cursor: default;
            opacity: 0.7;
        }

        .step1 {
            display: flex;
            gap: 20px;
            padding: 20px;
            max-width: 1400px;
            margin: 0 auto;
        }
    </style>
</head>
<body>
    <h2 class="step1">Step 1: Choose a Gift Box</h2>
    <div class="container">
        <!-- Box Options -->
        <div class="box-options">
            {% for product in collections['gift-boxes'].products %}
            <div class="box-option">
                <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}">
                <span class="product-name">{{ product.title }}</span><br>
                <span class="product-price">${{ product.price | divided_by: 100 }}</span><br>
                <button class="select-design" data-id="{{ product.variants.first.id }}" data-title="{{ product.title }}" data-image="{{ product.featured_image | img_url: 'medium' }}">
                    Select Design
                </button>
            </div>
            {% endfor %}
        </div>

        <!-- Sticky Cart -->
        <div class="sticky-cart">
            <h3>Your Selected Box</h3>
            <div id="cart-items"></div>
            <div class="cart-summary">
                <button id="next-button" disabled>Select your gifts</button>
            </div>
        </div>
    </div>

    <script>
        const cart = {};

        // Handle "Select Design" button click
        document.querySelectorAll('.select-design').forEach(button => {
            button.addEventListener('click', function() {
                const boxId = this.dataset.id;
                const boxTitle = this.dataset.title;
                const boxImage = this.dataset.image;

                updateCart(boxId, boxTitle, boxImage);
                document.getElementById('next-button').disabled = false;
            });
        });

        function updateCart(boxId, title, image) {
            const cartItemsContainer = document.getElementById('cart-items');
            cartItemsContainer.innerHTML = '';

            const cartItem = document.createElement('div');
            cartItem.className = 'cart-item';
            cartItem.innerHTML = `
                <img src="${image}" alt="${title}">
                <div class="cart-item-info">
                    <div>${title}</div>
                </div>
            `;

            cartItemsContainer.appendChild(cartItem);
        }

        document.getElementById('next-button').addEventListener('click', function () {
            const selectedBox = document.querySelector('.cart-item');
            if (selectedBox) {
                const boxId = selectedBox.querySelector('img').alt; // Using alt as a placeholder for ID
                window.location.href = `/pages/gift-product?box_id=${boxId}`;
            }
        });
    </script>
</body>
</html>
