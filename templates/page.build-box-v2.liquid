<div id="customizable-product" class="customizable-product">
    <!DOCTYPE html>
  <html lang="en">
  <head>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <title>Select Gift Box</title>
      <style>
          .box-options { display: flex; gap: 20px; }
          .box-option { text-align: center; }
          .box-option img { width: 150px; height: auto; }
      </style>
  </head>
  <body>
      <h2>Step 1: Choose a Gift Box</h2>
      <div class="box-options">
          {% for product in collections['gift-boxes'].products %}
              <div class="box-option">
                    <input type="radio" id="box-{{ product.variants.first.id }}" name="box_id" value="{{ product.variants.first.id }}" required>
                    <label for="box-{{ product.variants.first.id }}">
                     <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}">
                     <p>{{ product.title }}</p>
                    </label>
              </div>
          {% endfor %}
      </div>
      <button id="next-button" class="next-button">Next</button>

      <script>
                document.getElementById('next-button').addEventListener('click', function () {
          // Get the selected gift box
          const selectedBox = document.querySelector('input[name="box_id"]:checked');
          if (!selectedBox) {
              alert('Please select a gift box!');
              return;
          }

          // Get the selected box ID
          const boxId = selectedBox.value;

          // Redirect to the next page with the box_id
          window.location.href = `/pages/gift-product?box_id=${boxId}`;
          
      });

      </script>
  </body>
  </html>


</div>
